generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int         @id @default(autoincrement())
  firstName   String
  middeleName String?
  lastName    String
  email       String      @unique
  password    String
  role        ROLE        @default(USER)
  restaurant  Restaurant?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([email])
}

model Restaurant {
  id          Int               @id @default(autoincrement())
  name        String
  address     String
  city        String
  country     String
  phone       RestaurantPhone[]
  status      STATUS            @default(PENDING)
  rating      Float             @default(0)
  reviewCount Int               @default(0)
  restroType  TYPE              @default(BOTH)
  ownerId     Int               @unique
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  owner User @relation(fields: [ownerId], references: [id])
}

model RestaurantPhone {
  id            Int        @id @default(autoincrement())
  phoneNumber   String     @unique
  restaturantId Int
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  restaurant    Restaurant @relation(fields: [restaturantId], references: [id])
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  device    DEVICE   @default(WEB)
  expiresAt DateTime
  isRevoked Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, device])
}

enum ROLE {
  ADMIN
  USER
  RESTARANT_OWNER
}

enum STATUS {
  PENDING
  APPROVED
  REJECTED
}

enum TYPE {
  VEG
  NON_VEG
  BOTH
}

enum DEVICE {
  WEB
  ANDROID
  IOS
}
